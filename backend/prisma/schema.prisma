generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ================= CATEGORY ================= */
model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

/* ================= PRODUCT ================= */
model Product {
  id              String    @id @default(uuid())
  name            String
  description     String

  basePrice       Float
  discountPercent Float     @default(0)
  gstPercent      Float     @default(18)
  finalPrice      Float     // computed in backend

  stockQuantity   Int       @default(0)

  flavors         String[]
  sizes           String[]
  imageUrls       String[]

  isFeatured      Boolean   @default(false)
  isSpecialOffer  Boolean   @default(false)
  isActive        Boolean   @default(true)
  isVegetarian    Boolean   @default(false)  // true for veg, false for non-veg

  categoryId      String?
  categoryName    String?   // Store category name for redundancy and faster queries
  category        Category? @relation(fields: [categoryId], references: [id])

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
