generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ================= CATEGORY =================
 */
model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

/**
 * ================= PRODUCT =================
 */
model Product {
  id          String @id @default(uuid())
  name        String
  description String

  basePrice       Float
  discountPercent Float @default(0)
  finalPrice      Float // computed in backend

  isOutOfStock Boolean @default(false)

  flavors   String[]
  sizes     String[]
  imageUrls String[]

  isFeatured     Boolean @default(false)
  isSpecialOffer Boolean @default(false)
  isActive       Boolean @default(true)
  isVegetarian   Boolean @default(false) // true for veg, false for non-veg

  categoryId   String?
  categoryName String? // Store category name for redundancy and faster queries
  category     Category? @relation(fields: [categoryId], references: [id])

  cartItems  CartItem[] // cartItems
  orderItems OrderItem[] //order Items
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

/**
 * ================= CART =================
 */
model Cart {
  id        String     @id @default(uuid())
  userId    String     @unique // Firebase UID
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(uuid())
  cartId    String
  productId String
  quantity  Int     @default(1)
  flavor    String?
  size      String?

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId, flavor, size])
}

/**
 * ================= Order Tracker =================
 */

model Order {
  id     String      @id @default(uuid())
  userId String
  status OrderStatus @default(PENDING)

  totalAmount   Float
  discount      Float
  paymentMethod String @default("cod") // "cod" or "upi"

  items     OrderItem[]
  addressId String?
  address   OrderAddress? @relation(fields: [addressId], references: [id])

  // Coupon tracking
  couponCode    String? // Store the coupon code used
  appliedCoupon AppliedCoupon? // Link to applied coupon record

  cancellationRequest OrderCancellationRequest?
  refund              OrderRefund?

  createdAt   DateTime  @default(now())
  shippedAt   DateTime?
  deliveredAt DateTime?
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([couponCode])
}

model OrderItem {
  id        String @id @default(uuid())
  orderId   String
  productId String

  quantity Int
  price    Float
  flavor   String?
  size     String?

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

/**
 * ================= Order Address (Historical Address Snapshot) =================
 */
model OrderAddress {
  id      String  @id @default(uuid())
  orderId String? @unique

  name    String
  phone   String
  address String
  city    String
  state   String
  pincode String

  orders Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * ================= User Address =================
 */
model Address {
  id     String @id @default(uuid())
  userId String

  name    String
  phone   String
  address String
  city    String
  state   String
  pincode String

  isDefault Boolean @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}

enum CancellationRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RefundStatus {
  INITIATED
  REFUND_COMPLETED
}

/**
 * ================= Order Cancellation Request =================
 */
model OrderCancellationRequest {
  id      String                    @id @default(uuid())
  orderId String                    @unique
  userId  String
  reason  String // Minimum 20 words required
  status  CancellationRequestStatus @default(PENDING)

  // Video evidence for delivered orders (for defect claims)
  videoUrl        String? // URL to video stored in cloud/local storage
  videoUploadedAt DateTime? // When the video was uploaded

  // UPI ID for refunds (required for delivered orders requesting cancellation)
  upiId String? // UPI ID for refund processing

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

/**
 * ================= Order Refund (For Approved Cancellations) =================
 */
model OrderRefund {
  id           String       @id @default(uuid())
  orderId      String       @unique
  status       RefundStatus @default(INITIATED)
  refundAmount Float
  reason       String // Reason for refund (from cancellation request)
  upiId        String? // UPI ID where refund should be processed

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  initiatedAt DateTime  @default(now())
  completedAt DateTime?
  updatedAt   DateTime  @updatedAt

  @@index([status])
}

/**
 * ================= User =================
 */
model User {
  id          String  @id @default(uuid())
  firebaseUid String  @unique
  email       String
  name        String?
  phone       String?

  addresses Address[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * ================= COUPON CODE SYSTEM =================
 */

/**
 * Coupon Model - Stores coupon code definitions
 * Created by admin with trainer/influencer name
 * Can be used multiple times but tracks each usage
 */
model Coupon {
  id String @id @default(uuid())

  // Coupon code (e.g., "TRAINER_JOHN_10" or "INFLUENCER_SARAH_10")
  code String @unique

  // Trainer/Influencer name for identification
  trainerName String // e.g., "John", "Sarah"
  trainerId   String? // Optional: link to trainer account if available

  // Discount configuration
  discountPercent Float  @default(10) // Fixed 10% or customizable
  discountType    String @default("percent") // "percent" or "fixed" for future use

  // Validity and status
  isActive   Boolean @default(true)
  maxUses    Int? // Max times code can be used (null = unlimited)
  usageCount Int     @default(0) // Track current usage count

  expiryDate DateTime? // Optional: code expiration date

  // Applied coupons
  appliedCoupons AppliedCoupon[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String // Admin user ID who created this

  @@index([code])
  @@index([isActive])
  @@index([trainerName])
}

/**
 * AppliedCoupon Model - Tracks each time a coupon is used
 * Used for reporting and commission calculations
 */
model AppliedCoupon {
  id String @id @default(uuid())

  // Link to coupon definition
  couponId String
  coupon   Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)

  // Link to order where coupon was applied
  orderId String @unique
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // User who applied the coupon
  userId String

  // Discount amount that was applied
  discountAmount Float // Calculated: (order total * couponPercent) / 100

  // Trainer information for easy reporting
  trainerName String // Copied from coupon for historical record
  trainerId   String? // Optional: trainer ID

  // Application timestamp
  appliedDate DateTime @default(now())

  // For commission calculation (offline)
  commissionNote String? // e.g., "10% discount = $X commission"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([couponId])
  @@index([orderId])
  @@index([userId])
  @@index([trainerName])
  @@index([appliedDate])
}
